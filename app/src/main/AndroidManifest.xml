<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bradbroulik.adaptivedemos" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.bradbroulik.adaptivedemos.DemosActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.bradbroulik.adaptivedemos.ScreenDensityActivity"
            android:label="@string/title_device_density" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradbroulik.adaptivedemos.DemosActivity" />
        </activity>
        <activity
            android:name="com.example.bradbroulik.adaptivedemos.VectorDrawableActivity"
            android:label="@string/title_vector_drawable" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradbroulik.adaptivedemos.DemosActivity" />
        </activity>
        <activity
            android:name="com.example.bradbroulik.adaptivedemos.TintedDrawableActivity"
            android:label="@string/title_tinted_drawable" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradbroulik.adaptivedemos.DemosActivity" />
        </activity>
        <activity
            android:name="com.example.bradbroulik.adaptivedemos.HospitalListActivity"
            android:label="@string/title_master_detail" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradbroulik.adaptivedemos.DemosActivity" />
        </activity>
        <activity
            android:name="com.example.bradbroulik.adaptivedemos.GridViewActivity"
            android:label="@string/title_grid_view" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradbroulik.adaptivedemos.DemosActivity" />
        </activity>
        <activity
            android:name="com.example.bradbroulik.adaptivedemos.MostlyFluidActivity"
            android:label="@string/title_mostly_fluid" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradbroulik.adaptivedemos.DemosActivity" />
        </activity>
        <activity
            android:name="com.example.bradbroulik.adaptivedemos.HospitalDetailActivity"
            android:label="@string/title_book_detail"
            android:parentActivityName="com.example.bradbroulik.adaptivedemos.HospitalListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.bradbroulik.adaptivedemos.HospitalListActivity" />
        </activity>
    </application>
</manifest>